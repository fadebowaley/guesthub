
<header class="header-area header-three">  
<div class="header-top second-header d-none d-md-block">
<div class="container">
<div class="row align-items-center">      
<div class="col-lg-10 col-md-10 d-none d-lg-block">
<div class="header-cta">
<ul>                                   
<li>
<i class="far fa-clock"></i>
<span>Mon - Fri: 9:00 - 19:00/ Closed on Weekends</span>
</li>
<li>
<i class="far fa-mobile"></i>
<strong>+91 705 210-1786</strong>
</li>
</ul>
</div>
</div>

<div class="col-lg-2 col-md-2 d-none d-lg-block text-right">
<div class="header-social">
<span>
<a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a>
<a href="#" title="LinkedIn"><i class="fab fa-instagram"></i></a>               
<a href="#" title="Twitter"><i class="fab fa-twitter"></i></a>
<a href="#" title="Twitter"><i class="fab fa-youtube"></i></a>
</span>                    
<!--  /social media icon redux -->                               
</div>
</div>
</div>
</div>
</div>		
<div id="header-sticky" class="menu-area">
<div class="container">
<div class="second-menu">
<div class="row align-items-center">
<div class="col-xl-2 col-lg-2">
<div class="logo">
<a href="/"><img src="/images/img/logo/logo.png" alt="logo"></a>
</div>
</div>
<div class="col-xl-8 col-lg-8">
  <div class="main-menu text-center">
    <nav id="mobile-menu">
      <ul>
        <span class="classMenu" id="classMenu">
        <li><a href="/">Home</a></li>

        <li><a href="/pages/about">About</a></li>

        <li class="has-sub"><a href="#">Our Rooms</a>
          <ul>
            <li><a href="/pages/room-details">Room Details</a></li>
          </ul>
        </li>
        <li class="has-sub">
          <a href="/pages/facilities">Facilities</a>
          <ul>
            <li><a href="facilities-details">Services Details</a></li>
          </ul>
        </li>
        <li><a href="/pages/contact">Contact</a></li>
      </span>

        <script>
        document.getElementById("classMenu").style.display = window.innerWidth < 992 ? "none" : "block";
      </script>

        <% if (currentUser) { %>
          <% if (currentUser.role === "admin") { %>
          <!-- Admin Dashboard Menu -->
          
            <li class="has-sub" id="adminMenu" >
              <a href="#"><i class="fas fa-user-shield"></i> Admin</a>
              <ul>
                <li><a href="/admin/dashboard"><i class="fas fa-chart-bar"></i> Dashboard</a></li>
                <li><a href="/admin/customer"><i class="fas fa-users"></i> Customers</a></li>
                <li><a href="/user/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
              </ul>
            </li>
       <script>
              document.getElementById("adminMenu").style.display = window.innerWidth >= 992 ? "none" : "block";
            </script>

          <% } else if (currentUser.role === "user") { %>
            <!-- User Profile Menu -->
            
            <li class="has-sub" id="userMenu">
             <a href="#"><i class="fas fa-user"></i> Profile</a>
              <ul>
                <li><a href="/user/account"><i class="fas fa-user-circle"></i> Account</a></li>
                <li><a href="/bookings/cart"><i class="fas fa-shopping-cart"></i> Cart</a></li>
                <li><a href="/user/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
              </ul>
            </li>
        <script>
              document.getElementById("userMenu").style.display = window.innerWidth >= 992 ? "none" : "block";
            </script>
          <% } %>
        <% } else { %>
          <!-- Guest Menu -->
          <li id="loginMenuItem"><a href="/user/login">Login</a></li>
           <script>
            document.getElementById("loginMenuItem").style.display = window.innerWidth >= 992 ? "none" : "block";
          </script>
        <% } %>
      </ul>
    

    </nav>
  </div>
</div>


<div class="col-xl-2 col-lg-2 d-none d-lg-block">

<% if (currentUser && currentUser.role === "admin") { %>

<!--Admin Dashboard Link -->
<div class="d-flex justify-content-between">
<div class="box mr-2" data-toggle="tooltip" data-placement="bottom" title="Dashboard">
<a href="/admin/customer"><i class="fas fa-city  x "></i></a>
</div>
<div class="box mr-2" data-toggle="tooltip" data-placement="bottom" title="Payment">
<a href="/admin/dashboard"><i class="fas fa-money-check  x"></i></a>
</div>
<div class="box" data-toggle="tooltip" data-placement="bottom" title="Logout">
<a href="/user/logout"><i class="fas fa-sign-out-alt  x "></i></a>
</div>
</div>
<!--/ Admin Dashboard Link -->

<% } else if (currentUser && currentUser.role === "user") { %>

<!--User Dashboard Link -->
<div class="d-flex justify-content-between">
<div class="box mr-2" data-toggle="tooltip" data-placement="bottom" title="Profile">
<a href="/user/account"><i class="fa fa-user  x "></i></a>
</div>
<div class="box mr-2 position-relative" data-toggle="tooltip" data-placement="bottom" title="Cart">
  <a href="/bookings/cart"><i class="fas fa-shopping-cart x"></i></a>
  <% if (typeof cartItemsCount !== "undefined" && cartItemsCount > 0) { %>
    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
      <%= cartItemsCount %><!-- Replace this number with the actual number of items in the cart -->
    </span>
  <% } %>
</div>

<div class="box" data-toggle="tooltip" data-placement="bottom" title="Logout">
<a href="/user/logout"><i class="fas fa-sign-out-alt  x "></i></a>
</div>
</div>
<!--/ User Dashboard Link -->

<% } else { %>
<a href="/user/login" class="top-btn mt-10 mb-10">Reserve</a>
<% } %>
</div>


<div class="col-12">
<div class="mobile-menu">

  <!-- some menu here -->
</div>
</div>
</div>
</div>
</div>
</div>
</header>