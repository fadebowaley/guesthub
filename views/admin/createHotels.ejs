<%- include ../partials/_head %>
<style>
  .contact-field select {
    height: calc(2.9em + 0.75rem + 2px);
    border: 1px solid #777;
  }

  button,
  input,
  optgroup,
  select,
  textarea {
    padding-left: 1rem;
  }
</style>
<!--/head-->

<body>
  <!-- header -->
  <%- include ../partials/_header %>
  <!-- header-end -->


  <section id="contact" class="contact-area after-none contact-bg pt-120 pb-120 p-relative fix">
    <div class="container">
      <div class="row justify-content-center align-items-center">
        <div class="col-lg-8 order-1 offset-lg-2">
          <div class="contact-bg02">
            <div class="section-title center-align mb-40 text-center wow fadeInDown animated" data-animation="fadeInDown" data-delay=".4s">
              <h2>Register</h2>
              <!-- Flash message -->
              <% if (errorMsg != null && errorMsg.length > 0) { %>

              <div id="flash-msg" class="alert alert-warning alert-dismissible text-white fade show" role="alert" style="background-color: #be9874;">
                <%= errorMsg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
              <% } %>
            </div>

            <!-- Multistep form -->
            <form action="/user/signup" method="POST" class="contact-form mt-30" id="register-form">
              <!-- Step 1 -->
              <div class="step" id="step-1">
                <div class="row justify-content-center align-items-center">
                  <div class="col-lg-4">
                    <div class="contact-field p-relative c-name mb-20">
                      <select id="title" name="title" required>
                        <option value="" disabled selected>Select Title</option>
                        <option value="Pastor">Pastor</option>
                        <option value="Bishop">Bishop</option>
                        <option value="Mr">Mr</option>
                        <option value="Chief">Chief </option>
                        <option value="Dr">Dr</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-lg-8">
                    <div class="contact-field p-relative c-name mb-20">
                      <input type="text" id="name" name="name" placeholder="Name" required>
                    </div>
                  </div>
                </div>
                <button class="btn ss-btn" data-animation="fadeInRight" data-delay=".8s" type="button" id="next-1">Next</button>
              </div>

              <!-- Step 2 -->
              <!-- Step 2: Add Room Types Data to Hotel -->
<form id="step-2-form" style="display: none;">
  <div class="row justify-content-center align-items-center">
    <div class="col-lg-8">
      <h3>Add Room Types Data to Hotel</h3>
    </div>
    <div class="col-lg-4">
      <div class="contact-field p-relative c-name mb-20">
        <select id="room-type" name="room-type">
          <option value="" disabled selected>Select Room Type</option>
          <option value="Single Room">Single Room</option>
          <option value="Double Room">Double Room</option>
          <option value="Deluxe Room">Deluxe Room</option>
          <option value="Suite">Suite</option>
        </select>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="contact-field p-relative c-name mb-20">
        <input type="number" id="num-rooms" name="num-rooms" placeholder="Number of Rooms" required>
      </div>
    </div>
    <div class="col-lg-8">
      <button class="btn ss-btn" data-animation="fadeInRight" data-delay=".8s" type="button" onclick="addRoomType()">Add Room Type</button>
    </div>
    <div class="col-lg-8">
      <table id="room-types-table" class="table">
        <thead>
          <tr>
            <th scope="col">Room Type</th>
            <th scope="col">Number of Rooms</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
    <div class="col-lg-8">
      <button class="btn ss-btn" data-animation="fadeInRight" data-delay=".8s" type="button" onclick="showStep3()">Next</button>
    </div>
  </div>
</form>
</form><section>
   <%- include ../partials/_footer %>