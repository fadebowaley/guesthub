<style>
  .modal-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    display: none;
  }

  .modal {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    width: 70%;
    max-width: 600px;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
  }

  .close-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: transparent;
    border: none;
    font-size: 24px;
    cursor: pointer;
  }

  .modal-content {
    margin-top: 30px;
  }

  .table-container {
    height: 300px;
    overflow-y: auto;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    border: 1px solid #ddd;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 50px;
  }

  th,
  td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  th,
  td.status {
    text-align: right;
  }

  td.lefty {
    text-align: left;
  }

  th {
    background-color: #ffffff;
    text-align: left;
  }

  tr:nth-child(even) {
    background-color: #f9f9f9;
  }

  .status-btn {
    padding: 6px 12px;
    border: none;
    border-radius: 4px;
    color: #fff;
    background-color: #f50808;
  }

  .successful {
    background-color: #01781f;
  }
  .primary {
    background-color: #1239f9;
  }

  .breadcrumb-area {
    background-size: cover;
    position: relative;
    min-height: 20px;
  }

  .services-08-thumb {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .avatar {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 120px;
    height: 120px;
    margin-bottom: 20px;
    border-radius: 50%;
    overflow: hidden;
    padding: 5px;
    box-shadow: 0px 0px 5px 1px rgba(0, 0, 0, 0.2);
  }

  .avatar img {
    width: 100%;
    height: auto;
    border-radius: 50%;
  }

  .name {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
    text-align: center;
  }

  .contact {
    display: flex;
    align-items: center;
    margin-bottom: 5px;
  }

  .contact i {
    margin-right: 5px;
  }

  .contact span {
    font-size: 16px;
  }

  .services-08-thumb img {
    margin-bottom: 4px;
  }
</style>

