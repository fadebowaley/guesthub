					<div class="col-lg-8 col-md-12 col-sm-12 ">
  <!--search results -->
  <% rooms.forEach(room => { %>
    <div class="row align-items-center">  
      <div class="col-lg-4 col-md-6">
        <div class="contact-bg02">
          <div class="section-title center-align">
            <h2><%= room.roomType.hotel.name %></h2>                                    
          </div> 
          <h5><%= room.roomType.name %></h5>
          <div class="review-icon">
            <img src="/images/img/testimonial/review-icon.png" alt="img">
          </div>                                
          <ul>
            <li><h5>Max occupancy: <%= room.roomType.maxNumberAdult %> </h5></li>
          </ul>
        </div>  
      </div>
      <div class="col-lg-8 col-md-12 col-sm-12  sidebar-widget">
        <div class="single-services ser-m mb-30">
          <div class="services-thumb">
            <a class="gallery-link popup-image" href="#">
              <img src="/images/img/gallery/room-img01b.png" alt="img">
            </a>
          </div>
          <div class="services-content">                                     
            <div class="day-book">
              <ul>                                            
                <li>$ <%= room.roomType.price %> /Night</li>
                <% if (room.available) { %>
                  <li><a href="/bookings/new/<%= room.roomType._id %>/reservation">Book Now</a></li>                                       
                <% } else { %>
                  <li><a href="#">Not Available</a></li>
                <% } %>
              </ul>
            </div>
            <div class="icon">
              <ul>
                <li><img src="/images/img/icon/sve-icon1.png" alt="img"></li>
                <li><img src="/images/img/icon/sve-icon2.png" alt="img"></li>
                <li><img src="/images/img/icon/sve-icon3.png" alt="img"></li>
                <li><img src="/images/img/icon/sve-icon4.png" alt="img"></li>
              </ul>
            </div>
          </div>
        </div>
      </div>                       
    </div> 
  <% }) %>
